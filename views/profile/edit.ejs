<% include ../partials/header %>

<div class="ui main text container segment" style="width: 35%">
    <div class="ui huge header">Profile</div>
    <form class="ui form" action="/<%= currentUser._id%>/profile/" method="POST">
        <div class="field">
            <label>First Name:</label>
            <input type="text" name="profile[first_name]" placeholder="First Name">
        </div>
        <div class="field">
            <label>Middle Name</label>
            <input type="text" name="profile[middle_name]" placeholder="Middle Name">
        </div>
        <div class="field">
            <label>Last Name</label>
            <input type="text" name="profile[last_name]" placeholder="Last Name">
        </div>
        <div class="field">
            <label>Profile Picture</label>
            <input type="text" name="profile[photo]" placeholder="photo">
        </div>
        <button class="ui secondary button"> Submit!</button>
    </form>
</div>




